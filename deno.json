{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "deno.window",
      "deno.unstable"
    ],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ],
    "exclude": [
      "node_modules/"
    ]
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv main.ts",
    "test": "deno test --allow-net --allow-env --unstable-kv --coverage=coverage",
    "test:unit": "deno test tests/unit/ --parallel --allow-net --allow-env --unstable-kv",
    "test:integration": "deno test tests/integration/ --allow-net --allow-env --unstable-kv",
    "test:e2e": "deno test tests/e2e/ --allow-all --unstable-kv",
    "coverage": "deno coverage coverage --lcov > coverage.lcov"
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "@modelcontextprotocol/sdk/types.js": "https://esm.sh/@modelcontextprotocol/sdk@1.0.0/types.js"
  },
  "deploy": {
    "project": "3facc4af-0dd6-47cc-a0b9-eb8c3eae2846",
    "exclude": [
      "**/node_modules",
      "**/node_modules",
      "**/node_modules",
      "**/node_modules",
      "**/node_modules",
      "**/node_modules"
    ],
    "include": [],
    "entrypoint": "main.ts"
  }
}